@model IEnumerable<RutasWebApi.Models.Ruta>

@{
    ViewBag.Title = "Lista de rutas";
}

<h2>Lista de Rutas</h2>

<table id="rutas" class="display cell-border compact hover stripe order-column row-border">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Ciudad.NombreCiudad)</th>
        <th>@Html.DisplayNameFor(model => model.Ciudad1.NombreCiudad)</th>
        <th>@Html.DisplayNameFor(model => model.Km)</th>
        <th>@Html.DisplayNameFor(model => model.Tiempo)</th>
        <th>@Html.DisplayNameFor(model => model.Precio)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ruta in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => ruta.Ciudad.NombreCiudad)</td>
            <td>@Html.DisplayFor(modelItem => ruta.Ciudad1.NombreCiudad)</td>
            <td>@Html.DisplayFor(modelItem => ruta.Km)</td>
            <td>@Html.DisplayFor(modelItem => ruta.Tiempo)</td>
            <td>@Html.DisplayFor(modelItem => ruta.Precio)</td>
        </tr>
    }
    </tbody>
</table>